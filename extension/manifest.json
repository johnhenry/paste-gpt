{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "Paste GPT",
  "description": "Paste web content directly into Chat GPT",
  "options_page": "views/options.html",
  "icons": {
    "16": "images/icons/logo_16.png",
    "32": "images/icons/logo_32.png",
    "48": "images/icons/logo_48.png",
    "64": "images/icons/logo_64.png",
    "128": "images/icons/logo_128.png"
  },
  "action": {
    "default_popup": "views/popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ]
}